<Page x:Class="PracticalWork12.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticalWork12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <Border CornerRadius="20"
                Background="White"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="340">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10,0,10">

                <Button Content="sign in"
                    Width="75"
                    Height="25"
                    Background="#4A90E2"
                    Foreground="White"
                    FontSize="12"
                    FontFamily="Arial"
                    HorizontalAlignment="Center"
                    Margin="155,0,0,0"
                    Click="ButtonLog_Click"/>


                <TextBlock Text="Регистрация" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           FontFamily="Arial"
                           Foreground="#333333" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <Label Content="Login" FontFamily="Arial" FontSize="16"/>
                <TextBox x:Name="RegisterLoginTextBox"
                         Width="232"
                         Height="25"
                         HorizontalAlignment="Center"/>

                <Label Content="Nickname" FontFamily="Arial" FontSize="16"/>
                <TextBox x:Name="RegisterNickNameTextBox"
                         Width="232"
                         Height="25"
                         HorizontalAlignment="Center"/>

                <Label Content="Password" FontFamily="Arial" FontSize="16"/>
                <PasswordBox x:Name="RegisterPasswordBox"
                             Width="232"
                             Height="25"
                             HorizontalAlignment="Center"/>

                <Label Content="Role" FontFamily="Arial" FontSize="16"/>
                <ComboBox x:Name="RegisterComboBox"
                          Width="232"
                          Height="25"
                          HorizontalAlignment="Center"
                          DisplayMemberPath="Name"
                          SelectedValuePath="ID"/>

                <Button Content="register"
                        Width="232"
                        Height="32"
                        Background="#4A90E2"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Arial"
                        Margin="0,10,0,0"
                        Click="CreateAccount_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>