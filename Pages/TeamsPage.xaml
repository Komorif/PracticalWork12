<Page x:Class="PracticalWork12.Pages.TeamsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticalWork12.Pages" xmlns:local1="clr-namespace:PracticalWork12.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TeamsPage">

    <Page.Resources>
        <local1:ChangeColorForClassPerson x:Key="ChangeColorForClassPerson"/>
        <local1:TeamsSelect x:Key="TeamsSelect"/>
    </Page.Resources>

    <Grid>
        <Button Content="Back" FontSize="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click"
                Margin="5,5,0,0" Width="83"></Button>
        <ListView x:Name="ListViewTeams" Margin="0,40,0,0">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel>
                    <TextBlock Text="{Binding Path=Name}"/>
                    <ListView x:Name="ListViemTeam"
                              ItemsSource="{Binding ID, Converter={StaticResource TeamsSelect}}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                        <TextBlock Text="{Binding Path=Users.Nickname}"
                                                   Background="{Binding Path=Users.Class.Name,
                                                    Converter={StaticResource ChangeColorForClassPerson}}"
                                                   Foreground="Black" Width="100"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
