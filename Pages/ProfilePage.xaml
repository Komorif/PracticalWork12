<Page x:Class="PracticalWork12.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticalWork12.Pages" xmlns:local1="clr-namespace:PracticalWork12.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfilePage">

    <Page.Resources>
        <local1:ChangeColorForClassPerson x:Key="ChangeColorForClassPerson"/>
    </Page.Resources>

    <Grid Background="{Binding Path=Class.Name, Converter={StaticResource ChangeColorForClassPerson}}">
        <Button Content="Back" FontSize="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click" Margin="5,5,0,0" Width="83"></Button>
        <StackPanel Margin="10,147,10,142">
 
            <Label FontSize="20" FontFamily="Arial">
                <TextBlock>
                    <Run Text="Login: "/>
                    <Run Text="{Binding Login}"/>
                </TextBlock>
            </Label>

            <Label FontSize="20" FontFamily="Arial">
                <TextBlock>
                    <Run Text="Nickname: "/>
                    <Run Text="{Binding Nickname}"/>
                </TextBlock>
            </Label>

            <Label FontSize="20" FontFamily="Arial">
                <TextBlock>
                    <Run Text="Class: "/>
                    <Run Text="{Binding Class.Name}"/>
                </TextBlock>
            </Label>

        </StackPanel>
    </Grid>
</Page>
